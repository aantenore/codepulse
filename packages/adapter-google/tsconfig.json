{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "lib": [
            "ES2021",
            "DOM"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "references": [
        {
            "path": "../core"
        }
    ]
}